@{
  ViewBag.Title = "Page d'accueil";
}

<div class="jumbotron">
    <h1>Gestion des réceptions</h1>
</div>

@{
  if(!User.Identity.IsAuthenticated) {
    <div class="row">
        <div class="col-md-12">
            <p>Veuillez vous @Html.ActionLink("Identifier", "Login", "Home") pour continuer...</p>
        </div>
    </div>
  } else {
    <div class="row">
        <div class="col-md-12">
            <p>Bienvenue @Session["FirstName"] @Session["LastName"]</p>
        </div>
    </div>
  }
}
